{
    "compilerOptions": {
        "target": "ES2016",
        "module": "CommonJS",
        "declaration": true,
        "outDir": "./built/",
        "removeComments": true,
        "strict": true,
        "strictFunctionTypes": true,
        "strictNullChecks": true,
        "experimentalDecorators": true,
        "noImplicitReturns": true
    },
    "typeRoots": [
        "node_modules/@types",
        "src/@types"
    ],
    "include": [
        "src/**/*",
        "package.json",
        "LICENSE",
        "README.md"
    ],
    "exclude": [
        "node_modules",
        "test/**/*"
    ]
}